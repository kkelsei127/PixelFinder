<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300" Background="DarkSeaGreen">
    <Grid>
        <TextBox Name="HexColor" Background="pink" Height="30" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center" Margin="0,0,0,50" Text="#ffffff"/>
        <Button Name="ButtonSearch" Click="SearchPixel" Content="Search for pixel" Background="pink" Height="30" Width="200" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Center"
                HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
